<div class="comment">
  <p><%= comment.body %></p>
  <p class="small light">By: <%=  link_to comment.writer, user_path(comment.writer)%></p>
  <% if current_user == comment.user %>
	 <span class="light small"><%= link_to "Delete this comment", comment, method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %></span>
  <% end %>
</div>
