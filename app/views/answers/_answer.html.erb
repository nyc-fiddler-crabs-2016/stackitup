<section>
  <%= link_to "UP", vote_answer_path(vote: {value: 1, answer: answer}), method: :post %>
  <%= link_to "DOWN", vote_answer_path(vote: {value: -1, answer: answer}), method: :post %>
  <p>Written by: <%= link_to answer.user.username, user_path(answer.user) %><%= answer.write_vote_count %> Votes | <%= answer.write_comment_count %> comments</span></h3></p>
